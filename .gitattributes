# Default to CRLF for all text files
* text eol=crlf

# Explicit line endings for common file types
*.js    text eol=crlf
*.ts    text eol=crlf
*.jsx   text eol=crlf
*.tsx   text eol=crlf
*.css   text eol=crlf
*.scss  text eol=crlf
*.html  text eol=crlf
*.json  text eol=crlf
*.md    text eol=crlf
*.yml   text eol=crlf
*.yaml  text eol=crlf
*.txt   text eol=crlf
